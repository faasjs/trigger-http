{
  "name": "@faasjs/trigger-http",
  "version": "0.0.0-alpha.1",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts --fix src",
    "build": "rm -rf ./lib && tsc",
    "test": "jest --expand",
    "doc": "jsdoc2md --files ./lib/*.js > ./API.md",
    "ci": "yarn lint && yarn test",
    "commit": "yarn ci && yarn build && yarn doc"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@faasjs/flow": "0.0.0-alpha.7",
    "@faasjs/utils": "0.0.0-alpha.2"
  },
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "0.0.0-alpha.0",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@types/debug": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "babel-jest": "*",
    "jest": "*",
    "jsdoc-babel": "*",
    "jsdoc-to-markdown": "*"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "/*\\.test\\.ts$",
    "testPathIgnorePatterns": [
      "/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/"
    ]
  }
}